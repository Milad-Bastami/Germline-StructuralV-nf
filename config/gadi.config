// profile for the Gadi supercomputer at NCI
// More info: https://opus.nci.org.au/display/DAE/Nextflow

// Preset use of containers with Singularity
singularity {
    enabled = true
    cacheDir = "/scratch/${params.pbs_account}/${params.whoami}/singularity"
    autoMounts = true
    autoCleanUp = true
}

process {
	//beforeScript = '${projectDir}/scripts/pullContainers.sh'
	module = 'singularity'
	cache = 'lenient'
	stageInMode = 'symlink'
	project = "${params.pbs_account}"
	storage = "scratch/${params.pbs_account}+gdata/${params.pbs_account}"
	disk = '30.GB'

    withName: 'checkInputs' {
	executor = 'local'
}
    withName: 'manta' {
        executor = 'pbspro'
        queue = 'normal'
        cpus = 10
        time = '3h'
        memory = '40.GB'
}

    withName: 'rehead_manta' {
        executor = 'local'
}

    withName: 'smoove' {
        executor = 'pbspro'
        queue = 'normal'
	disk = '400.GB'
        cpus = 4
        time = '3h'
        memory = '190.GB'
}

    withName: 'rehead_smoove' {
        executor = 'local'
}

    withName: 'tiddit_sv' {
        executor = 'pbspro'
        queue = 'normal'
        cpus = 4
        time = '3h'
        memory = '40.GB'
} 

    withName: 'rehead_tiddit' {
        executor = 'local'
}

    withName: 'tiddit_cov' {
        executor = 'pbspro'
        queue = 'normal'
        cpus = 1
        time = '3h'
        memory = '10.GB'
}

    withName: 'survivor_merge' {
        executor = 'pbspro'
        queue = 'normal'
        cpus = 1
        time = '1h'
        memory = '10.GB'
}

    withName: 'survivor_summary' {
        executor = 'pbspro'
        queue = 'normal'
        cpus = 1
        time = '1h'
        memory = '10.GB'
}

    withName: 'annotsv' {
        executor = 'pbspro'
        queue = 'normal'
        cpus = 1
        time = '1h'
        memory = '10.GB'

}}
