manifest {
  author              = 'Georgie Samaha'
  name                = 'GermlineStructuralV-nf'
  description         = 'Multi-caller germline structural variant calling pipeline'
  homePage            = 'https://github.com/Sydney-Informatics-Hub/Germline-StructuralV-nf'

// Mandate a minimum version of nextflow required to run the pipeline
  nextflowVersion     = '!>=20.07.1'
}

// resume pipeline from last successful process
  resume              = true

// Set default parameters
// Any parameters provided by the user with a -params-file or
// with --param (i.e. --outDir) command-line arguments will
// override the values defined here
  params.input		      = false
  params.help		        = false
  params.ref		        = false
  params.mantaBED		    = false
  params.mantaBED_tbi	  = false
  params.outDir         = "./results"

// Resource allocation
// TODO specify process cpus (should have just small,med,large?), benchmark for each process
  params.cpus           = 8 

// Preset use of containers with Singularity
  singularity {
        enabled         = true
        autoMounts      = true
        temp            = '~/containers'
        }

  // mulled borrowed from nf-core manta/convertinversions.nf TODO: test use of nf-core/modules or choose different
  // TODO: check if just can use rare disease container instead of smoove
  params.mulled__container      = 'docker://quay.io/biocontainers/mulled-v2-40295ae41112676b05b649e513fe7000675e9b84:0b4be2c719f99f44df34be7b447b287bb7f86e01-0' 
  params.smoove__container	    = 'docker://brentp/smoove:v0.2.7'
  params.tiddit__container	    = 'docker://quay.io/biocontainers/tiddit:3.3.1--py39h5094d80_0'
  params.survivor__container	  =  'docker://quay.io/biocontainers/survivor:1.0.7--hd03093a_2'

// Fail a task if any command returns non-zero exit code
  shell = ['/bin/bash', '-euo', 'pipefail']

// Resources for each process 
// TODO resource benchmarking
// TODO work out memory distribution issues
// TODO pbs profile

  process {

  // Smoove
	withName: 'smoove' {
		cpus = 3
		//memory  = 8.GB
	}

  //  Manta
	withName: 'manta' {
		cpus = 8
		//memory = 40.GB                                    
	}

  // Tiddit
  withName: 'tiddit_sv' 
    cpus = 3
    //memory = 40.GB

  withName: 'tiddit_cov' 
    cpus = 1
    //memory = 10.GB

  // Survivor
  withName: 'survivor' 
    cpus = 1
    //memory = 10.GB
}


// Produce a workflow diagram
  dag {
    enabled = true
    file = 'runInfo/GermlineStructuralV_dag.svg'
  }

  report {
    enabled = true
    file = 'runInfo/GermlineStructuralV_report.html'
  }

  timeline {
    enabled = true
    file = 'runInfo/GermlineStructuralV_timeline.html'
  }

  trace {
    enabled = true
    file = 'runInfo/GermlineStructuralV_trace.txt'
  }